  gem 'spring'
  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem 'better_errors'
  gem 'quiet_assets'
  gem 'capybara'
  gem 'pry'
end

group :production do
  gem 'rails_12factor', '0.0.2'
  gem 'unicorn', '4.8.3'
  gem 'thin'
end

