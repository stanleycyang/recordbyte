class Resources
  constructor: ($resource, ipCookie, type)->

    self = @
    accessToken = ipCookie 'token'

    self.service = $resource 'http://recordbyte.dev:3000/v1/' + type + '/:id',
        id: '@id'
        access_token: accessToken
      ,
        query:
          method: 'GET'
          isArray: true
      ,
        update:
          method: 'PUT'

    return self.service

angular
  .module 'app'
  .factory 'Resources', Resources

