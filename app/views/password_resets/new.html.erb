<% provide(:title, "Forgot password") %>


<div class="row">
  <div class="col-md-offset-4 col-md-4 entry-form">
    <h2>Forgot password</h2>
    <br />
    <%= render 'shared/flash' %>
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
      <br />
      <%= f.submit "Submit", class: "btn btn-success form-control" %>
    <% end %>
    <br />
    <small>By submitting your email address, you will receive instructions regarding your password reset.</small>

  </div>
  
</div>
