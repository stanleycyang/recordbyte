<% provide(:title, "Login") %>

<div class="row">
  <div class="col-md-offset-4 col-md-4 entry-form">
    <h2>Log in</h2>
    <br />
    <%= render 'shared/flash' %>
    <%= form_for(:session, url: login_path) do |f| %>
      <%= render 'shared/loginform', f: f %>
      <%= f.submit "Log in", id: "login-button", class: "btn btn-success form-control" %>
    <% end %>
    <br />
    <%= link_to "Forgot password?", new_password_reset_path %>
  </div>
</div>
